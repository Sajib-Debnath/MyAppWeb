@model IEnumerable<Category>


@{
    ViewData["Title"] = "Index";
}


<h1>Category List</h1>

<div class="container p-4">
    <div class="row">
        <div class="col-6 text-primary">
            Categories
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-info" asp-controller="Category" asp-action="Create"><i class="bi bi-plus-circle"></i>Create New Category </a>
        </div> 
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.DisplayOrder
                </td>
                <td role="group">
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id"> <i class="bi bi-pencil-square"></i> </a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id"> <i class="bi bi-trash"></i> </a>
                </td>
            </tr>
        }
    </tbody>
</table>